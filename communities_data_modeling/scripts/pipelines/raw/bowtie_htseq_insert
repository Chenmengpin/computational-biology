#!/bin/sh
#
#SBATCH --job-name=bbsplit_bbmap
#SBATCH --time=1000:00
#SBATCH --nodes=4
#SBATCH --ntasks=1

# use bbmap to align bbsplit reads output
# htseq count
# gff files generated by PATRIC
# assemblies generated by SPades and plasmid SPades

cd /data/dragon/mohameam/RNAseq/
module load bowtie2 compilers-extra oracle-java/1.8.0.31 gcc perl
export PATH=/data/dragon/mohameam/asoft/bbmap/:$PATH
export PATH=/data/dragon/mohameam/asfot/HTSeq-0.6.1/:$PATH

bowtie2 -fr -x VCH -q -1 S_16_F0182_1-V52_Replicate-1_E-coli-Vibrio_S1_L003_R1_001_val_1.fq.gz -2 S_16_F0182_1-V52_Replicate-1_E-coli-Vibrio_S1_L003_R2_001_val_2.fq.gz -S insert_vch_rep_1.sam
bowtie2 -fr -x VCH -q -1 S_16_F0183_2-V52_Replicate-2_E-coli-Vibrio_S2_L003_R1_001_val_1.fq.gz -2 S_16_F0183_2-V52_Replicate-2_E-coli-Vibrio_S2_L003_R2_001_val_2.fq.gz -S insert_vch_rep_2.sam
bowtie2 -fr -x VCH -q -1 S_16_F0184_3-V52_Replicate-3_E-coli-Vibrio_S3_L003_R1_001_val_1.fq.gz -2 S_16_F0184_3-V52_Replicate-3_E-coli-Vibrio_S3_L003_R2_001_val_2.fq.gz -S insert_vch_rep_3.sam

bowtie2 -fr -x VCH -q -1 S_16_F0185_4-E36_Replicate-1_E-coli-Vibrio_S4_L003_R1_001_val_1.fq.gz -2 S_16_F0185_4-E36_Replicate-1_E-coli-Vibrio_S4_L003_R2_001_val_2.fq.gz -S insert_e36_rep_1.sam
bowtie2 -fr -x E36 -q -1 S_16_F0186_5-E36_Replicate-2_E-coli-Vibrio_S5_L003_R1_001_val_1.fq.gz -2 S_16_F0186_5-E36_Replicate-2_E-coli-Vibrio_S5_L003_R2_001_val_2.fq.gz -S insert_e36_rep_2.sam
bowtie2 -fr -x E36 -q -1 S_16_F0187_6-E36_Replicate-3_E-coli-Vibrio_S6_L003_R1_001_val_1.fq.gz -2 S_16_F0187_6-E36_Replicate-3_E-coli-Vibrio_S6_L003_R2_001_val_2.fq.gz -S insert_e36_rep_3.sam

bowtie2 -fr -x VCH -q -1 S_16_F0191_10-V52-in-presence-of-E36_Replicate-1_E-coli-Vibrio_S10_L003_R1_001_val_1.fq.gz -2 S_16_F0191_10-V52-in-presence-of-E36_Replicate-1_E-coli-Vibrio_S10_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_VCH_rep_1.sam
bowtie2 -fr -x VCH -q -1 S_16_F0192_11-V52-in-presence-of-E36_Replicate-2_E-coli-Vibrio_S11_L003_R1_001_val_1.fq.gz -2 S_16_F0192_11-V52-in-presence-of-E36_Replicate-2_E-coli-Vibrio_S11_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_VCH_rep_2.sam
bowtie2 -fr -x VCH -q -1 S_16_F0193_12-V52-in-presence-of-E36_Replicate-3_E-coli-Vibrio_S12_L003_R1_001_val_1.fq.gz -2 S_16_F0193_12-V52-in-presence-of-E36_Replicate-3_E-coli-Vibrio_S12_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_VCH_rep_3.sam

bowtie2 -fr -x E36 -q -1 S_16_F0191_10-V52-in-presence-of-E36_Replicate-1_E-coli-Vibrio_S10_L003_R1_001_val_1.fq.gz -2 S_16_F0191_10-V52-in-presence-of-E36_Replicate-1_E-coli-Vibrio_S10_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_E36_rep_1.sam
bowtie2 -fr -x E36 -q -1 S_16_F0192_11-V52-in-presence-of-E36_Replicate-2_E-coli-Vibrio_S11_L003_R1_001_val_1.fq.gz -2 S_16_F0192_11-V52-in-presence-of-E36_Replicate-2_E-coli-Vibrio_S11_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_E36_rep_2.sam
bowtie2 -fr -x E36 -q -1 S_16_F0193_12-V52-in-presence-of-E36_Replicate-3_E-coli-Vibrio_S12_L003_R1_001_val_1.fq.gz -2 S_16_F0193_12-V52-in-presence-of-E36_Replicate-3_E-coli-Vibrio_S12_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_E36_rep_3.sam

bowtie2 -fr -x merged_VCH_E36 -q -1 S_16_F0191_10-V52-in-presence-of-E36_Replicate-1_E-coli-Vibrio_S10_L003_R1_001_val_1.fq.gz -2 S_16_F0191_10-V52-in-presence-of-E36_Replicate-1_E-coli-Vibrio_S10_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_merged_rep_1.sam
bowtie2 -fr -x merged_VCH_E36 -q -1 S_16_F0192_11-V52-in-presence-of-E36_Replicate-2_E-coli-Vibrio_S11_L003_R1_001_val_1.fq.gz -2 S_16_F0192_11-V52-in-presence-of-E36_Replicate-2_E-coli-Vibrio_S11_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_merged_rep_2.sam
bowtie2 -fr -x merged_VCH_E36 -q -1 S_16_F0193_12-V52-in-presence-of-E36_Replicate-3_E-coli-Vibrio_S12_L003_R1_001_val_1.fq.gz -2 S_16_F0193_12-V52-in-presence-of-E36_Replicate-3_E-coli-Vibrio_S12_L003_R2_001_val_2.fq.gz -S insert_vch_and_e36_merged_rep_3.sam


